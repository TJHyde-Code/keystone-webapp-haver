@model HaverGroupProject.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h1>Create</h1>


<div class="card shadow-lg p-4 mb-5 bg-body-tertiary rounded">
    <h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="CustomerName" class="control-label fw-bold"></label>
                    <input asp-for="CustomerName" class="form-control border-primary" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

                <div class="d-flex gap-2 mt-3">
                    <!-- Submit Button -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary py-1 px-3" title="Create new customer">
                            <i class="bi bi-plus-circle me-1"></i> Create
                        </button>
                    </div>

                    <!-- Back Button -->
                    <div>
                        <a asp-action="Index" class="btn btn-success py-1 px-3" title="Return to customer list">
                            <i class="bi bi-list-ul me-1"></i> Back to List
                        </a>
                    </div>
                </div>
        </form>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
