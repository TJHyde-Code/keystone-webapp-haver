@model HaverGroupProject.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h1>Create</h1>


<div class="card shadow-lg p-4 mb-5 bg-body-tertiary rounded">
    <h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="CustomerName" class="control-label fw-bold"></label>
                    <input asp-for="CustomerName" class="form-control border-primary" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
