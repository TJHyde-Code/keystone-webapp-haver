@model HaverGroupProject.Models.Customer

@{
    ViewData["Title"] = "Archive Customer";
}

<h1>Archive Customer</h1>

<div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
    <h3>Are you sure you want to archive this customer?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
    </dl>

    <form asp-action="Archive" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Archive" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

