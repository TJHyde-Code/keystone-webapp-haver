@model HaverGroupProject.Models.Customer

@{
    ViewData["Title"] = "Archive Customer";
}

<h1>Archive Customer</h1>

<div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
    <h3>Are you sure you want to archive this customer?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
    </dl>

    <form asp-action="Archive" method="post" class="d-inline">
        <input type="hidden" asp-for="ID" />
        <div class="d-flex gap-2" role="group">
            <!-- Archive Button -->
            <button type="submit" class="btn btn-danger py-1 px-2" title="Archive this customer">
                <i class="bi bi-archive me-1"></i> Archive
            </button>

            <!-- Cancel Button -->
            <a asp-action="Index" class="btn btn-secondary py-1 px-2" title="Return to customer list">
                <i class="bi bi-arrow-left me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>

