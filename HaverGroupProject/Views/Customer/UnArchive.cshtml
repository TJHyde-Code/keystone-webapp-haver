@model HaverGroupProject.Models.Customer

@{
    ViewData["Title"] = "Unarchive Customer";
}

<h1>Unarchive Customer</h1>

<div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
    <h3>Are you sure you want to unarchive this customer?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
    </dl>

    <form asp-action="UnArchive" method="post" class="d-inline">
        <input type="hidden" asp-for="ID" />
        <div class="d-flex gap-2" role="group">
            <!-- UnArchive Button -->
            <button type="submit" class="btn btn-success py-1 px-2" title="Restore this customer">
                <i class="bi bi-arrow-counterclockwise me-1"></i> Unarchive
            </button>

            <!-- Cancel Button -->
            <a asp-action="Index" class="btn btn-outline-secondary py-1 px-2" title="Return to customer list">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>
