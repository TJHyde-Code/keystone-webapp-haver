@model HaverGroupProject.ViewModels.CustomerDetailsViewModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-light py-3">
            <h1 class="h3 mb-0">
                <i class="bi bi-person-badge me-2"></i>Customer Details
            </h1>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-8">
                    <h4 class="text-primary mb-3">
                        <i class="bi bi-building me-2"></i>@Html.DisplayFor(model => model.Customer.CustomerName)
                    </h4>
                    <hr />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="border-bottom pb-3">
                                <h5 class="text-muted mb-3"><i class="bi bi-info-circle me-2"></i>Basic Information</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Contact Summary</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.CustConSummary)</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border-bottom pb-3">
                                <h5 class="text-muted mb-3"><i class="bi bi-telephone me-2"></i>Contact Details</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Email</dt>
                                    <dd class="col-sm-8">
                                        <a href="mailto:@Model.Customer.CustomerEmail" class="text-decoration-none">
                                            @Html.DisplayFor(model => model.Customer.CustomerEmail)
                                        </a>
                                    </dd>

                                    <dt class="col-sm-4">Phone</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.CustomerPhone)</dd>

                                    <dt class="col-sm-4">Address</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.CustomerAddress)</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Active Orders Section -->
            <div class="mt-4">
                <div class="alert @(Model.ActiveOrdersCount > 0 ? "alert-info" : "alert-warning") d-flex align-items-center">
                    <i class="bi @(Model.ActiveOrdersCount > 0 ? "bi-list-check" : "bi-exclamation-triangle") me-2 fs-4"></i>
                    <div>
                        <strong>Active Orders:</strong> @Model.ActiveOrdersCount
                    </div>
                </div>

                @if (Model.ActiveOrdersCount > 0)
                {
                    <div class="card mt-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-card-checklist me-2"></i>Active Orders</h5>
                        </div>
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush">
                                @foreach (var order in Model.ActiveOrders)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>SO# @order.SalesOrdNum</strong>
                                            <div class="text-muted small">
                                                Kickoff: @order.KickoffMeeting.Value.ToString("MMM dd, yyyy")
                                            </div>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">Active</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-3 text-muted">
                        <i class="bi bi-inbox fs-1"></i>
                        <p class="fs-5 mt-2">No active orders for this customer</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="d-flex gap-3 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Customer?.ID" class="btn btn-primary px-4">
            <i class="bi bi-pencil-square me-2"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<style>
    .card {
        border: none;
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-2px);
    }
    dt {
        font-weight: 500;
        color: #6c757d;
    }
    dd {
        font-weight: 400;
    }
    .list-group-item {
        transition: background-color 0.2s;
    }
    .list-group-item:hover {
        background-color: #f8f9fa;
    }
    .card-header {
        background-color: #f8f9fa !important;
    }
</style>