@model HaverGroupProject.Models.Vendor

@{
    ViewData["Title"] = "Archive Vendor";
}

<h1>Archive Vendor</h1>

<div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
    <h3>Are you sure you want to archive this vendor?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VendorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VendorName)
        </dd>
    </dl>


    <form asp-action="Archive" method="post" class="d-inline">
        <input type="hidden" asp-for="ID" />
        <div class="d-flex gap-2" role="group">
            <!-- Archive Button -->
            <button type="submit" class="btn btn-danger py-1 px-2" title="Archive this record">
                <i class="bi bi-archive me-1"></i> Archive
            </button>

            <!-- Cancel Button -->
            <a asp-action="Index" class="btn btn-secondary py-1 px-2" title="Return to list">
                <i class="bi bi-arrow-left me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>
