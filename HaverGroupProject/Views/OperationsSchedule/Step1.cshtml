<div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Step1" method="post">

        <div class="row">
            <div class="col-md-6">

                <div class="form-group mb-3">
                    <label asp-for="SalesOrdNum" class="form-label fw-bold">Sales Order Number</label>
                    <input asp-for="SalesOrdNum" class="form-control border-primary " placeholder="0" />
                    <span asp-validation-for="SalesOrdNum" class="text-danger"></span>
                </div>


            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="KickoffMeeting" class="form-label fw-bold"> Kickoff Meeting</label>
                    <input asp-for="KickoffMeeting" type="date" class="form-control border-primary " />
                    <span asp-validation-for="KickoffMeeting" class="text-danger"></span>
                </div>

                @* <div class="form-group mb-3">
                <label asp-for="ReleaseApprovalDrawing" class="form-label fw-bold">Release Approval Drawing </label>
                <input asp-for="ReleaseApprovalDrawing" type="date" class="form-control border-primary " />
                <span asp-validation-for="ReleaseApprovalDrawing" class="text-danger"></span>
                </div> *@

            </div>
        </div>

        <button type="button" class="btn btn-success ms-2" onclick="window.history.back()">Back to List </button>
        <button type="submit" class="btn btn-primary">Next</button>
        <button type="submit" name="save" value="true" class="btn btn-warning">Save</button>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/progress.js"></script>


