@model HaverGroupProject.ViewModels.MultiStepOperationsScheduleViewModel

@{
    ViewData["Title"] = "Step 1 - Create Operations Schedule";
}

<h2>Step 1: Enter Operations Schedule Details</h2>

@*For Demo purposes(MT)*@
