@model HaverGroupProject.ViewModels.MultiStepOperationsScheduleViewModel

@{
    ViewData["Title"] = "Step 4 - Select or Create Vendor";
}

<h2>Step 4: Create Procurement Info</h2>

<img src="~/img/ProgressBarStep4.png" asp-append-version="true" alt="Progress bar step four" class="PBar4" style="height: 50px; width:auto;" />


<div class="card shadow-lg p-4 mb-5 bg-body-tertiary rounded">
    <form asp-action="Step4" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ID" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="SelectedVendorIDs" class="control-label fw-bold">Vendors</label>
                    <select asp-for="SelectedVendorIDs" class="form-control" asp-items="Model.Vendors"></select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProductionOrderNumber" class="control-label fw-bold">Purchase Order Number</label>
                    <input asp-for="ProductionOrderNumber" class="form-control" />
                </div>
            </div>
        </div>



        <a asp-action="Step3" asp-route-id="@Model.ID" class="btn btn-success">Previous</a>
        <button type="submit" class="btn btn-success">Next</button>
        <button type="submit" name="save" value="true" class="btn btn-warning">Save</button>
    </form>


</div>
<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#vendorModal">
    Add New Vendor
</button>
<!-- Vendor Modal -->
<div class="modal fade" id="vendorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Vendor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="vendorErrors" class="alert alert-danger d-none"></div>
                <div class="mb-3">
                    <label class="form-label">Vendor Name</label>
                    <input type="text" id="newVendorName" class="form-control" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="saveVendorBtn" class="btn btn-primary">Save Vendor</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#saveVendorBtn').click(function () {
                var vendorName = $('#newVendorName').val().trim();

                if (!vendorName) {
                    $('#vendorErrors').text('Vendor name is required').removeClass('d-none');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("CreateVendor", "OperationsSchedule")',
                    type: 'POST',
                    data: { vendorName: vendorName },
                    success: function (response) {
                        if (response.success) {
                            // Add new option to select list
                            var select = $('#SelectedVendorIDs');
                            select.append(new Option(response.vendorName, response.vendorId, true, true));

                            // Close modal and clear input
                            $('#vendorModal').modal('hide');
                            $('#newVendorName').val('');
                        } else {
                            $('#vendorErrors').text(response.message).removeClass('d-none');
                        }
                    },
                    error: function () {
                        $('#vendorErrors').text('Error saving vendor').removeClass('d-none');
                    }
                });
            });
        });
    </script>
}