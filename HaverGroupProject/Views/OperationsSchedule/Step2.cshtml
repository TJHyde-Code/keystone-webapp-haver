@model HaverGroupProject.ViewModels.MultiStepOperationsScheduleViewModel

@{
    ViewData["Title"] = "Step 2 - Select or Create Customer";
}

<center>
<img src="~/img/ProgressBarStep2.png" asp-append-version="true" alt="Progress bar step two" class="PBar2" style="height: 75px; width:1000px;" />
</center>

<h2>Step 2: Select or Create a Customer</h2>

<div class="card shadow-lg p-4 mb-5 bg-body-tertiary rounded">
    <form asp-action="Step2" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ID" />

        <div class="form-group mb-3">
            <label asp-for="CustomerID" class="control-label fw-bold">Customer</label>
            <select asp-for="CustomerID" class="form-control" asp-items="Model.Customers">
                <option value="">-- Select a Customer --</option>
            </select>
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EngineerID" class="control-label fw-bold">Engineer</label>
            <select asp-for="EngineerID" class="form-control" asp-items="Model.Engineers">
                <option value="">-- Select a Engineer --</option>
            </select>
            <span asp-validation-for="EngineerID" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="KickoffMeeting" class="form-label fw-bold"> Kickoff Meeting</label>
                    <input id="KickoffPicker" asp-for="KickoffMeeting" type="date" class="form-control border-primary " />
                    <span asp-validation-for="KickoffMeeting" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ApprovalDrawingExpected" class="control-label fw-bold">Expected Approval Drawing</label>
                    <input id="ApprovalDrawingPicker" asp-for="ApprovalDrawingExpected" class="form-control" type="date" />
                    <span asp-validation-for="ApprovalDrawingExpected" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PreOrderExpected" class="control-label fw-bold">Expected Pre Order</label>
                    <input id="PreOrderPicker" asp-for="PreOrderExpected" class="form-control" type="date" />
                    <span asp-validation-for="PreOrderExpected" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EngineerPackageExpected" class="control-label fw-bold">Expected Engineer Package</label>
                    <input id="EngineerPackagePicker" asp-for="EngineerPackageExpected" class="form-control" type="date" />
                    <span asp-validation-for="EngineerPackageExpected" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PurchaseOrderExpected" class="control-label fw-bold">Expected Purchase Order</label>
                    <input id="PurchaseOrderPicker" asp-for="PurchaseOrderExpected" class="form-control" type="date" />
                    <span asp-validation-for="PurchaseOrderExpected" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReadinessToShipExpected" class="control-label fw-bold">Expected Readiness To Ship</label>
                    <input id="ReadinessToShipPicker" asp-for="ReadinessToShipExpected" class="form-control" type="date" />
                    <span asp-validation-for="ReadinessToShipExpected" class="text-danger"></span>
                </div>
            </div>
        </div>




        <div class="mt-4 d-flex gap-2">
            <!-- Previous Button -->
            <a asp-action="Step1" asp-route-id="@Model.ID" class="btn btn-outline-secondary py-1 px-3">
                <i class="bi bi-arrow-left me-1"></i>Previous
            </a>

            <!-- Next Button -->
            <button type="submit" class="btn btn-outline-primary py-1 px-3">
                <i class="bi bi-arrow-right me-1"></i>Next
            </button>

            <!-- Save Button -->
            <button type="submit" name="save" value="true" class="btn btn-outline-warning py-1 px-3">
                <i class="bi bi-save me-1"></i>Save
            </button>
        </div>
    </form>
</div>

<div class="mt-3">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#customerModal">
        <i class="bi bi-person-plus me-1"></i> Add New Customer
    </button>
</div>

<!-- Customer Modal -->
<div class="modal fade" id="customerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="customerErrors" class="alert alert-danger d-none"></div>
                <div class="mb-3">
                    <label class="form-label">Customer Name</label>
                    <input type="text" id="newCustomerName" class="form-control" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <button type="button" id="saveCustomerBtn" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save Customer
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#saveCustomerBtn').click(function () {
                var customerName = $('#newCustomerName').val().trim();

                if (!customerName) {
                    $('#customerErrors').text('Customer name is required').removeClass('d-none');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("CreateCustomer", "OperationsSchedule")',
                    type: 'POST',
                    data: { customerName: customerName },
                    success: function (response) {
                        if (response.success) {
                            // Add new option to select list
                            var select = $('#CustomerID');
                            select.append(new Option(response.customerName, response.customerId, true, true));

                            // Close modal and clear input
                            $('#customerModal').modal('hide');
                            $('#newCustomerName').val('');
                            $('#customerErrors').addClass('d-none');
                        } else {
                            $('#customerErrors').text(response.message).removeClass('d-none');
                        }
                    },
                    error: function () {
                        $('#customerErrors').text('Error saving customer').removeClass('d-none');
                    }
                });
            });
        });
    </script>

    <!--Kickoff Date picker-->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const kickoff = document.getElementById("KickoffPicker");
            if (kickoff) {
                flatpickr(kickoff, {
                    dateFormat: "Y-m-d",       // format compatible with backend binding
                    minDate: "today",          // prevent selecting past dates
                    defaultDate: new Date(),   // show today's date by default
                    disableMobile: true        // always use Flatpickr, not native input
                    });
                    }
                });
    </script>

    <!--Approval Drawing Expected picker-->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const kickoff = document.getElementById("ApprovalDrawingPicker");
            if (kickoff) {
                flatpickr(kickoff, {
                    dateFormat: "Y-m-d",       
                    minDate: "today",          
                    defaultDate: new Date(),   
                    disableMobile: true        
                });
            }
        });
    </script>

    <!--PreOrder Expected picker-->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const kickoff = document.getElementById("PreOrderPicker");
            if (kickoff) {
                flatpickr(kickoff, {
                    dateFormat: "Y-m-d",
                    minDate: "today",
                    defaultDate: new Date(),
                    disableMobile: true
                });
            }
        });
    </script>

    <!--Engineer Package Expected picker-->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const kickoff = document.getElementById("EngineerPackagePicker");
            if (kickoff) {
                flatpickr(kickoff, {
                    dateFormat: "Y-m-d",
                    minDate: "today",
                    defaultDate: new Date(),
                    disableMobile: true
                });
            }
        });
    </script>

    <!--Purchase Order Expected picker-->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const kickoff = document.getElementById("PurchaseOrderPicker");
            if (kickoff) {
                flatpickr(kickoff, {
                    dateFormat: "Y-m-d",
                    minDate: "today",
                    defaultDate: new Date(),
                    disableMobile: true
                });
            }
        });
    </script>

    <!--Readiness To Ship Expected picker-->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const kickoff = document.getElementById("ReadinessToShipPicker");
            if (kickoff) {
                flatpickr(kickoff, {
                    dateFormat: "Y-m-d",
                    minDate: "today",
                    defaultDate: new Date(),
                    disableMobile: true
                });
            }
        });
    </script>
}