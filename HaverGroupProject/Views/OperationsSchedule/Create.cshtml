@model HaverGroupProject.Models.OperationsSchedule

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OperationsSchedule</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="SalesOrdNum" class="control-label"></label>
                <input asp-for="SalesOrdNum" class="form-control" />
                <span asp-validation-for="SalesOrdNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtSalesOrdNum" class="control-label"></label>
                <input asp-for="ExtSalesOrdNum" class="form-control" />
                <span asp-validation-for="ExtSalesOrdNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="MachineDesc" class="control-label"></label>
                <input asp-for="MachineDesc" class="form-control" />
                <span asp-validation-for="MachineDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNum" class="control-label"></label>
                <input asp-for="SerialNum" class="form-control" />
                <span asp-validation-for="SerialNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageReleaseName" class="control-label"></label>
                <input asp-for="PackageReleaseName" class="form-control" />
                <span asp-validation-for="PackageReleaseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KickoffMeeting" class="control-label"></label>
                <input asp-for="KickoffMeeting" class="form-control" />
                <span asp-validation-for="KickoffMeeting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseApprovalDrawing" class="control-label"></label>
                <input asp-for="ReleaseApprovalDrawing" class="form-control" />
                <span asp-validation-for="ReleaseApprovalDrawing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PONum" class="control-label"></label>
                <input asp-for="PONum" class="form-control" />
                <span asp-validation-for="PONum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PODueDate" class="control-label"></label>
                <input asp-for="PODueDate" class="form-control" />
                <span asp-validation-for="PODueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label"> Vendors Accredited</label> 
                        <button type="button" id="btnRight" class="btn btn-danger btn-sm ">
                            <strong>-</strong>
                        </button>
                        @Html.ListBox("selectedOptions", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label"> Choose Vendor </label>
                    <button type="button" id="btnLeft" class="btn btn-success btn-sm">
                        <strong>+</strong>
                    </button>
                    @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" id="btnSubmit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-success" >Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/multiselect.js"></script>
}
