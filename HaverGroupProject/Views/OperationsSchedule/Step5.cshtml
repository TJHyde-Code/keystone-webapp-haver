@model HaverGroupProject.ViewModels.MultiStepOperationsScheduleViewModel

@{
    ViewData["Title"] = "Step 5 - Machine Details & Notes";
}

<style>
    body {
        background-color: #f5f5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .progress-bar-img {
        height: 75px;
        width: 1000px;
        margin: 20px 0;
    }

    h2 {
        color: #0A2240; /* Deep blue */
        font-weight: 600;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    h4 {
        color: #0A2240; /* Deep blue */
        font-weight: 500;
        border-bottom: 2px solid #dee2e6; /* Light gray */
        padding-bottom: 0.5rem;
    }

    .card-container {
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .form-control {
        border: 1px solid #dee2e6; /* Light gray */
        border-radius: 0.25rem;
        padding: 0.5rem 0.75rem;
    }

        .form-control:focus {
            border-color: #0A2240; /* Deep blue */
            box-shadow: 0 0 0 0.2rem rgba(10, 34, 64, 0.25);
        }

    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    /* Button Styles */
    .btn {
        font-weight: 500;
        font-size: 0.8rem;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
    }

    .btn i {
        margin-right: 0.5rem;
    }

    .btn-previous {
        background-color: #6c757d; /* Gray */
        color: white;
        border: 1px solid #6c757d;
    }

        .btn-previous:hover {
            background-color: #5a6268;
            color: white;
        }

    .btn-finish {
        background-color: #28a745; /* Green */
        color: white;
        border: 1px solid #28a745;
    }

        .btn-finish:hover {
            background-color: #218838;
            color: white;
        }

    .btn-save {
        background-color: #0A2240; /* Deep blue */
        color: white;
        border: 1px solid #0A2240;
    }

        .btn-save:hover {
            background-color: #1A3A6F;
            color: white;
        }

    .btn-demo {
        background-color: #6c757d; /* Gray */
        color: white;
        border: 1px solid #6c757d;
    }

        .btn-demo:hover {
            background-color: #5a6268;
            color: white;
        }

    /* Form Layout */
    .form-section {
        margin-bottom: 2rem;
    }

    .form-row {
        margin-bottom: 1.5rem;
    }



    /* Textarea styling */
    textarea.form-control {
        min-height: 200px;
        resize: vertical;
    }

    /* Button container */
    .button-group {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        margin-top: 2rem;
        flex-wrap: wrap;
    }
</style>

<div class="container">
    <center>
        <img src="~/img/ProgressBarStep5.png" asp-append-version="true" alt="Progress bar step five" class="progress-bar-img" />
    </center>

    <h2>Step 5: Machine Details & Notes</h2>

    @* Demo Button *@
    <div class="mb-4">
        <button type="button" class="btn btn-demo btn-sm py-1 px-2 ms-2" onclick="autofillForm()">
            <i class="bi bi-magic me-1"></i>
            <span>Demo</span>
        </button>
    </div>

    <div class="card-container">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Step5" method="post">
            <input type="hidden" asp-for="ID" />

            <div class="form-section">
                <h4>Notes</h4>
                <div class="row form-row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PreOrder" class="form-label">Pre-Order Notes</label>
                            <input asp-for="PreOrder" class="form-control" placeholder="Enter Pre-Order Notes">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Scope" class="form-label">Scope</label>
                            <input asp-for="Scope" class="form-control" placeholder="Enter Scope">
                        </div>
                        <div class="mb-3">
                            <label asp-for="BudgetAssembHrs" class="form-label">Budget Assembly Hours</label>
                            <input asp-for="BudgetAssembHrs" class="form-control" type="number" placeholder="Enter Hours">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ActualAssembHours" class="form-label">Actual Assembly Hours</label>
                            <input asp-for="ActualAssembHours" class="form-control" type="number" placeholder="Enter Hours">
                        </div>
                        <div class="mb-3">
                            <label asp-for="ActualReworkHours" class="form-label">Actual Rework Hours</label>
                            <input asp-for="ActualReworkHours" class="form-control" type="number" placeholder="Enter Hours">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="OtherComments" class="form-label">Other Comments</label>
                            <textarea asp-for="OtherComments" class="form-control" rows="8" placeholder="Enter additional comments"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="button-group">
                <!-- Previous Button -->
                <a asp-action="Step4" asp-route-id="@Model.ID" class="btn btn-previous btn-sm">
                    <i class="bi bi-arrow-left me-1"></i>
                    <span>Previous Page</span>
                </a>

                <!-- Finish Button -->
                <button type="submit" class="btn btn-finish btn-sm">
                    <i class="bi bi-check-circle me-1"></i>
                    <span>Finish & Save</span>
                </button>

                <!-- Save Button -->
                <button type="submit" name="save" value="true" class="btn btn-save btn-sm">
                    <i class="bi bi-check-circle me-1"></i>
                    <span>Save Process</span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/progress.js"></script>

    @* For demo purposes only *@
    <script>
        function autofillForm() {
            // Set demo values for the fields
            document.getElementById('PreOrder').value = 'Notes have been added';
            document.getElementById('Scope').value = 'Scope has been added';
            document.getElementById('BudgetAssembHrs').value = '25';
            document.getElementById('ActualAssembHours').value = '28';
            document.getElementById('ActualReworkHours').value = '5';
            document.getElementById('OtherComments').value = 'Here is where the additional comments will go';
        }
    </script>
}