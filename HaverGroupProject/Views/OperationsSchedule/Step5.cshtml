@model HaverGroupProject.ViewModels.MultiStepOperationsScheduleViewModel

@{
    ViewData["Title"] = "Step 5 - Machine Details & Notes";
}

<h2>Step 5: Machine Details & Notes</h2>

<form asp-action="Step5" method="post">
    <input type="hidden" asp-for="ID" />

    <h4>Machine Details</h4>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="NamePlateOrdered" class="form-check-input" type="checkbox">
            <label asp-for="NamePlateOrdered" class="form-check-label">Name Plate Ordered</label>
        </div>

        <div class="form-check">
            <input asp-for="NameplateRecieved" class="form-check-input" type="checkbox">
            <label asp-for="NameplateRecieved" class="form-check-label">Nameplate Received</label>
        </div>

        <div class="form-check">
            <input asp-for="InstalledMedia" class="form-check-input" type="checkbox">
            <label asp-for="InstalledMedia" class="form-check-label">Installed Media</label>
        </div>

        <div class="form-check">
            <input asp-for="SparePartsSpareMedia" class="form-check-input" type="checkbox">
            <label asp-for="SparePartsSpareMedia" class="form-check-label">Spare Parts & Spare Media</label>
        </div>

        <div class="form-check">
            <input asp-for="BaseFrame" class="form-check-input" type="checkbox">
            <label asp-for="BaseFrame" class="form-check-label">Base Frame</label>
        </div>

        <div class="form-check">
            <input asp-for="AirSeal" class="form-check-input" type="checkbox">
            <label asp-for="AirSeal" class="form-check-label">Air Seal</label>
        </div>

        <div class="form-check">
            <input asp-for="CoatingLining" class="form-check-input" type="checkbox">
            <label asp-for="CoatingLining" class="form-check-label">Coating/Lining</label>
        </div>

        <div class="form-check">
            <input asp-for="Disassembly" class="form-check-input" type="checkbox">
            <label asp-for="Disassembly" class="form-check-label">Disassembly</label>
        </div>
    </div>

    <h4>Notes</h4>
    <div class="form-group">
        <label asp-for="PreOrder" class="control-label">Pre-Order Notes</label>
        <input asp-for="PreOrder" class="form-control input-width" />

        <label asp-for="Scope" class="control-label">Scope</label>
        <input asp-for="Scope" class="form-control input-width" />

        <label asp-for="BudgetAssembHrs" class="control-label">Budget Assembly Hours</label>
        <input asp-for="BudgetAssembHrs" class="form-control input-width" />

        <label asp-for="ActualAssembHours" class="control-label">Actual Assembly Hours</label>
        <input asp-for="ActualAssembHours" class="form-control input-width" type="number" />

        <label asp-for="ActualReworkHours" class="control-label">Actual Rework Hours</label>
        <input asp-for="ActualReworkHours" class="form-control input-width" type="number" />

        <label asp-for="OtherComments" class="control-label">Other Comments</label>
        <textarea asp-for="OtherComments" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Finish & Save</button>

    <button type="button" class="btn btn-primary" onclick="window.history.back()">Go Back</button>
</form>
