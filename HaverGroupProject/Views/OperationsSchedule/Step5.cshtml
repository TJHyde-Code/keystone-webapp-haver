@model HaverGroupProject.ViewModels.MultiStepOperationsScheduleViewModel

@{
    ViewData["Title"] = "Step 5 - Machine Details & Notes";
}

<h2>Step 5: Machine Details & Notes</h2>

<img src="~/img/ProgressBarStep5.png" asp-append-version="true" alt="Progress bar step five" class="PBar5" style="height: 50px; width:auto;" />

@*For Demo purposes(MT)*@
<div class="mb-4">
    <button type="button" class="btn btn-success ms-2" onclick="autofillForm()">Demo</button>
</div>

<div class="container">
    <div class="card shadow-lg p-4 mb-5 bg-body-tertiary rounded">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Step5" method="post">
                <input type="hidden" asp-for="ID" />


                <h4 class="mt-4 mb-3">Notes</h4>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PreOrder" class="form-label fw-bold">Pre-Order Notes</label>
                            <input asp-for="PreOrder" class="form-control border-primary" placeholder="Enter Pre-Order Notes">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Scope" class="form-label fw-bold">Scope</label>
                            <input asp-for="Scope" class="form-control border-primary" placeholder="Enter Scope">
                        </div>
                        <div class="mb-3">
                            <label asp-for="BudgetAssembHrs" class="form-label fw-bold">Budget Assembly Hours</label>
                            <input asp-for="BudgetAssembHrs" class="form-control border-primary" type="number" placeholder="Enter Hours">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ActualAssembHours" class="form-label fw-bold">Actual Assembly Hours</label>
                            <input asp-for="ActualAssembHours" class="form-control border-primary" type="number" placeholder="Enter Hours">
                        </div>
                        <div class="mb-3">
                            <label asp-for="ActualReworkHours" class="form-label fw-bold">Actual Rework Hours</label>
                            <input asp-for="ActualReworkHours" class="form-control border-primary" type="number" placeholder="Enter Hours">
                        </div>
                        <!-- Comment out previous note section
                        <div class="mb-3">
                            <label asp-for="OtherComments" class="form-label fw-bold">Other Comments</label>
                            <textarea asp-for="OtherComments" class="form-control border-primary" rows="4" placeholder="Enter additional comments"></textarea>
                        </div>
                        -->
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="OtherComments" class="form-label fw-bold">Other Comments</label>
                            <textarea asp-for="OtherComments" class="form-control border-primary" rows="15" placeholder="Enter additional comments"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-3">
                    <a asp-action="Step4" asp-route-id="@Model.ID" class="btn btn-success">Previous</a>
                    <button type="submit" class="btn btn-success px-4">Finish & Save</button>
                    <button type="submit" name="save" value="true" class="btn btn-warning">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/progress.js"></script>


    @* For demo purposes only *@
    <script>
        function autofillForm() {
            // Set demo values for the fields
            document.getElementById('PreOrder').value = 'Notes have been added';
            document.getElementById('Scope').value = 'Scope has been added';
            document.getElementById('BudgetAssembHrs').value = '25';
            document.getElementById('ActualAssembHours').value = '28';
            document.getElementById('ActualReworkHours').value = '5';
            document.getElementById('OtherComments').value = 'Here is where the additional comments will go';
        }
    </script>

}
