@model HaverGroupProject.Models.OperationsSchedule

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>OperationsSchedule</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrdNum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalesOrdNum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExtSalesOrdNum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExtSalesOrdNum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Model.Customer?.CustomerName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MachineDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MachineDesc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SerialNum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PackageReleaseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PackageReleaseName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KickoffMeeting)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KickoffMeeting)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseApprovalDrawing)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseApprovalDrawing)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vendor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vendor.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OperationsScheduleVendors)
        </dt>
        <dd class="col-sm-10">
            @{
                int vendorCount = Model.OperationsScheduleVendors.Count;
                if (vendorCount > 0)
                {
                    string firstVendor = Model.OperationsScheduleVendors.FirstOrDefault().Vendor.VendorName;
                    if (vendorCount > 1)
                    {
                        string vendorList = "";
                        var v = Model.OperationsScheduleVendors.ToList();
                        for (int i = 1; i < vendorCount; i++)
                        {
                            vendorList += v[i].Vendor.VendorName + " <br />";
                        }
                        <a class="" role="button" data-bs-toggle="collapse" href="#collapseVendor@(Model.ID)"
                           aria-expanded="false" aria-controls="collapseVendor@(Model.ID)">
                            @firstVendor <span class="badge bg-info">@vendorCount</span>
                        </a>
                        <div class="collapse" id="collapseVendor@(Model.ID)">
                            @Html.Raw(vendorList)
                        </div>
                    }
                    else
                    {
                        @firstVendor
                    }
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PONum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PONum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PODueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PODueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
