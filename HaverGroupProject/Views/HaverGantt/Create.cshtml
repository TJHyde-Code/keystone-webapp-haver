@model HaverGroupProject.Models.HaverGantt

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Gantt</h1>

@*For Demo purposes*@
<div>    
    <button type="button" class="btn btn-primary mt-3" onclick="autofillForm()">Demo</button>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PurchaseOrderNum" class="control-label"></label>
                <input asp-for="PurchaseOrderNum" class="form-control" />
                <span asp-validation-for="PurchaseOrderNum" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date"
                       value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PromiseDate" class="control-label"></label>
                <input asp-for="PromiseDate" class="form-control" type="date"
                       value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="PromiseDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Progress" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Progress" class="form-control" type="number" step="0.01" min="0" max="1"
                           id="progressInput" oninput="updateProgressDisplay()" placeholder="e.g. 0.1" />
                    <span class="input-group-text" id="progressDisplay">0%</span>
                </div>
                <span asp-validation-for="Progress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApprvDwgRecvd" class="control-label"></label>
                <input asp-for="ApprvDwgRecvd" class="form-control"
                       value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ApprvDwgRecvd" class="text-danger"></span>
            </div>

           

            <div class="form-group">
                <label asp-for="GanttNotes" class="control-label"></label>
                <textarea asp-for="GanttNotes" class="form-control" placeholder="e.g. Order on hold pending payment"></textarea>
                <span asp-validation-for="GanttNotes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MachineDescriptionID" class="control-label"></label>
                <select asp-for="MachineDescriptionID" class ="form-control" asp-items="ViewBag.MachineDescriptionID"></select>
            </div>

            

            <div class="form-group">
                <label asp-for="EngineerID" class="control-label"></label>
                <select asp-for="EngineerID" class ="form-control" asp-items="ViewBag.EngineerID"></select>
            </div>

            <div class="form-group">
                <label asp-for="VendorID" class="control-label"></label>
                <select asp-for="VendorID" class ="form-control" asp-items="ViewBag.VendorId"></select>
            </div>

            <input type="submit" value="Create" class="button-link" /> |
            <a asp-action="Index">Back to List</a>
        </form>
        
       

    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/progress.js"></script>


    @* For demo purposes only *@
    <script>
        function autofillForm() {
            // Set demo values for the fields
            document.getElementById('PurchaseOrderNum').value = '97862543';
            document.getElementById('CustomerID').value = '3'; 
            document.getElementById('StartDate').value = '2025-03-03';
            document.getElementById('PromiseDate').value = '2025-03-11';
            document.getElementById('Quantity').value = '3'; 
            document.getElementById('ApprvDwgRecvd').value = '2025-01-01';
            document.getElementById('GanttNotes').value = 'Autofilled for demo purposes.';
            document.getElementById('MachineDescriptionID').selectedIndex = 2;
            document.getElementById('EngineerID').selectedIndex = 2; 
            document.getElementById('VendorID').selectedIndex = 2;
        }
    </script>

}


